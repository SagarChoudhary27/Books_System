<% layout("/layouts/boilerplate") %>
<div class="row mt-4">
    <div class="col-8 offset-2">
    
    <h3 class="mb-4">Add New Book</h3>
 
    <form method="POST" action="/books" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input name="book[title]" placeholder="Enter Title" type="text" class="form-control" required >
        </div>

        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="book[description]" required placeholder="Enter Description" type="text" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <lable for="pdf" class="form-label" >Upload Book PDF</lable>
            <input name="book[pdf]" required  type="file" class="form-control">
        </div>
        
        <button class="btn btn-dark mt-3">Add</button>
    </form>
</div>
</div> 
